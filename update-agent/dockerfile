FROM python:3.12-slim

# Install apt-get (needed to run apt commands)
RUN apt-get update && apt-get install -y --no-install-recommends \
    apt \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY update-check.py .

# Create data directory for output
RUN mkdir -p /data

ENV UPDATE_STATUS_FILE=/data/update-status.json
ENV CHECK_INTERVAL_SECONDS=3600

CMD ["python3", "-u", "update-check.py"]
